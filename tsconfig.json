{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "target": "es5",
    "outDir": "./dist/",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "*": ["./src/*"]
    },
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
  "exclude": [
    "node_modules"
  ],
}